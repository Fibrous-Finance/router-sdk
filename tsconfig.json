{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "es7",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}